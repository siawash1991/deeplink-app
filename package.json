{
  "name": "deep-link-shortener",
  "version": "1.0.0",
  "description": "کوتاه‌کننده لینک هوشمند با قابلیت Deep Linking برای یوتوب، اینستاگرام و سایر پلتفرم‌ها",
  "main": "src/server.js",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "test": "jest --coverage --setupFilesAfterEnv=./tests/setup.js",
    "test:watch": "jest --watch --setupFilesAfterEnv=./tests/setup.js",
    "test:unit": "jest --testPathPattern=tests/ --setupFilesAfterEnv=./tests/setup.js",
    "lint": "eslint src/ tests/",
    "lint:fix": "eslint src/ tests/ --fix",
    "format": "prettier --write \"src/**/*.js\" \"tests/**/*.js\" \"public/**/*.{js,css,html}\"",
    "format:check": "prettier --check \"src/**/*.js\" \"tests/**/*.js\" \"public/**/*.{js,css,html}\"",
    "prepare": "husky install || echo 'Husky not installed'",
    "docker:build": "docker build -t deep-link-shortener .",
    "docker:run": "docker run -p 3000:3000 --env-file .env deep-link-shortener",
    "docker:compose": "docker-compose up -d",
    "docker:compose:down": "docker-compose down"
  },
  "keywords": [
    "deep-linking",
    "url-shortener",
    "youtube",
    "instagram",
    "mobile-apps",
    "analytics",
    "nodejs",
    "express",
    "mongodb",
    "link-shortener"
  ],
  "author": "Your Name <your.email@example.com>",
  "license": "MIT",
  "dependencies": {
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "mongoose": "^8.0.0",
    "morgan": "^1.10.0",
    "shortid": "^2.2.16",
    "user-agent": "^1.0.4"
  },
  "devDependencies": {
    "@types/jest": "^29.5.11",
    "eslint": "^8.55.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-jest": "^27.6.0",
    "eslint-plugin-node": "^11.1.0",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.0",
    "nodemon": "^3.0.2",
    "prettier": "^3.1.1",
    "supertest": "^6.3.3"
  },
  "engines": {
    "node": ">=14.0.0",
    "npm": ">=6.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/deep-link-shortener.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/deep-link-shortener/issues"
  },
  "homepage": "https://github.com/yourusername/deep-link-shortener#readme",
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{css,html,md,json}": [
      "prettier --write"
    ]
  },
  "jest": {
    "testEnvironment": "node",
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/server.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 70,
        "functions": 70,
        "lines": 70,
        "statements": 70
      }
    },
    "testMatch": [
      "**/tests/**/*.test.js"
    ]
  }
}
